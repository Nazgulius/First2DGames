using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class AnimKnight : MonoBehaviour {
	Animator anim;

	void Start () {
		anim = GetComponents<Animator>();
	}
	

	void Update () {
		if (Input.GetKeyUp (KeyCode.Space)){
			anim.SetBool ("jump", !anim.GetBool("jump"));
		}	
	}
}
